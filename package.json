{
  "name": "beyana-ecommerce",
  "version": "1.0.0",
  "description": "Beyana Bio e-commerce monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:frontend": "cd apps/frontend && npm test -- --coverage --watchAll=false",
    "test:admin": "cd apps/admin && npm test -- --coverage --watchAll=false",
    "test:backend": "cd apps/backend && npm test -- --coverage --watchAll=false",
    "test:coverage": "turbo run test:coverage",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "audit": "npm audit --audit-level=moderate"
  },
  "packageManager": "npm@10.5.0",
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "picocolors": "^1.1.1"
  }
}
